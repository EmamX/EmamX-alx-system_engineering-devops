#!/bin/bash

# Convert WATER from base 'water' to decimal
water_decimal=$((5#$(echo $WATER | tr 'water' '01234')))

# Convert STIR from base 'stir.' to decimal
stir_decimal=$((5#$(echo $STIR | tr 'stir.' '01234')))

# Add the two decimal numbers
sum_decimal=$((water_decimal + stir_decimal))

# Convert the sum from decimal to base 8
base8_sum=$(printf "%o" $sum_decimal)

# Map the octal digits to 'bestchol'
result=$(echo $base8_sum | tr '01234567' 'bestchol')

# Print the result
echo $result
