#!/bin/bash

# Define the base characters for WATER, STIR, and BESTCHOL
base_water="water"
base_stir="stir."
base_bestchol="bestchol"

# Function to convert a number from a given base to decimal
base_to_decimal() {
	    number=$1
	        base_chars=$2
		    base=${#base_chars}
		        decimal=0
			    len=${#number}
			        for (( i=0; i<$len; i++ )); do
					        char=${number:i:1}
						        value=$(expr index "$base_chars" "$char")
							        decimal=$((decimal * base + value - 1))
								    done
								        echo $decimal
								}

							# Function to convert a number from decimal to a given base
							decimal_to_base() {
								    number=$1
								        base_chars=$2
									    base=${#base_chars}
									        result=""
										    while [ $number -gt 0 ]; do
											            remainder=$((number % base))
												            result="${base_chars:remainder:1}$result"
													            number=$((number / base))
														        done
															    echo $result
														    }

													    # Get the decimal values of WATER and STIR
													    water_decimal=$(base_to_decimal "$WATER" "$base_water")
													    stir_decimal=$(base_to_decimal "$STIR" "$base_stir")

													    # Add the two decimal numbers
													    sum_decimal=$((water_decimal + stir_decimal))

													    # Convert the sum to the bestchol base
													    result=$(decimal_to_base $sum_decimal "$base_bestchol")

													    # Print the result
													    echo $result
